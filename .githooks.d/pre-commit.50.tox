#!/bin/bash
function test {
    "$@"
    local status=$?
    if [ $status -ne 0 ]; then
        echo "Error with $1" >&2
        exit 1
    fi
    return $status
}

test .githooks.d/install_deps >&2
# Activate micromamba environment in the current shell
if command -v micromamba &> /dev/null; then
    eval "$(micromamba shell hook -s posix)"
    micromamba activate ats-linter
fi
python3 -m tox -p auto -e lint,py312

status=$?
if [ $status -ne 0 ]; then
    git reset
    exit 1
fi
