#!/bin/bash
function test {
    "$@"
    local status=$?
    if [ $status -ne 0 ]; then
        echo "Error with $1" >&2
        exit 1
    fi
    return $status
}
test .githooks.d/install_deps >&2
python3 -m tox -p auto -e lint,py39

status=$?
if [ $status -ne 0 ]; then
    git reset
    exit 1
fi
